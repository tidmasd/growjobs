<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Company</th>
      <!-- <th>Sector ranking</th> -->
      <th class="hidden-xs">Region</th>
      <th class="hidden-xs">Sector</th>
      <th class="hidden-xs">Growth</th>
      <th></th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><b><%= company.ranking %></b></td>
        <td><%= company.name %></td>
        <!-- <td><%= company.sector_ranking %></td> -->
        <td class="hidden-xs"><%= company.region %></td>
        <td class="hidden-xs"><%= company.sector %></td>
        <td class="hidden-xs"><%= company.growth_perc %>%</td>
        <td><a href="<%= company.career_url %>" target="blank" class="careerurl">Careers</a></td>
        <!-- <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

